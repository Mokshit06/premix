{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "src",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "downlevelIteration": true,
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}